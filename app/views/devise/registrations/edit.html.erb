<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <!-- <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp" -->
                    <!-- style="width: 185px;" alt="logo"> -->
                  <h4 class="mt-1 mb-5 pb-1">Edit <%= resource_name.to_s.humanize %></h4>
                </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                 
                  <div class="form-outline mb-4">
                      <%= f.email_field :email, autofocus: true, class: "form-control field", placeholder: "Email address", autocomplete: "email" %>
                    <!-- <label class="form-label" for="form2Example11">Email</label> -->
                  </div>
                  
                  <div class="form-outline mb-4">
                      <%= f.text_field :first_name, autofocus: true, class: "form-control field", placeholder: "First Name", autocomplete: "first_name" %>
                    <!-- <label class="form-label" for="form2Example11">Email</label> -->
                  </div>
                  <div class="form-outline mb-4">
                      <%= f.text_field :last_name, autofocus: true, class: "form-control field", placeholder: "Last Name", autocomplete: "last_name" %>
                    <!-- <label class="form-label" for="form2Example11">Email</label> -->
                  </div>
                  <div class="form-outline mb-4">
                      <%= f.text_field :country, autofocus: true, class: "form-control field", placeholder: "Country", autocomplete: "country" %>
                    <!-- <label class="form-label" for="form2Example11">Email</label> -->
                  </div>
                  <div class="form-outline mb-4">
                      <%= f.text_field :city, autofocus: true, class: "form-control field", placeholder: "City", autocomplete: "city" %>
                    <!-- <label class="form-label" for="form2Example11">Email</label> -->
                  </div>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>


                  <div class="form-outline mb-4 field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", type: "password",  class: "form-control field", placeholder: "New Password" %>
                  </div>
                  <div class="form-outline mb-4 field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password, autocomplete: "new-password",type: "password",  class: "form-control field", placeholder: "New Password" %>
                  </div>

                  <div class="form-outline mb-4 field">
                    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                    <%= f.password_field :current_password, autocomplete: "current-password",type: "password",  class: "form-control field", placeholder: "Old Password" %>
                  </div>


                  <div class="text-center pt-1 mb-5 pb-1">
                    <div class="actions">
                      <%= f.submit "Update", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
                    </div>
                  <% end %>

                  <h3>Cancel my account</h3>

                  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to delete account?" }, method: :delete %></p>

                  <%= link_to "Back", :back %>
                  </div>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                
                <%= image_tag "Master-chef-holding-chicken-on-transparent-background-PNG.png", alt:"logo" %>
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
