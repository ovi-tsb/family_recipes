<div class="form-inline clearfix">
	
	<i class="small-text"><%= t 'recipes.drag_drop' %></i>
	<div class="nested-fields">
		<div class="direction-group">
			<div>
				<%= f.input :step, input_html: { class: "form-input form-control" }, label: false %>  
			</div>
			<div class="row">
				<div class="field col-sm-10 col-md-10">
					<%#= f.label :image %>
					<%= f.label t('recipes.edit.labels.image') %>
					<%= f.file_field :image, type: 'file', id: "uformFileDisabled", class: 'form-control' %>
				</div>
				<% if f.object.image.attached? %>
				
					<div class="field">
						<%= image_tag f.object.image.variant(quality: "50"), class: "edit-form-image" if f.object.image.attached? %>
					</div>
				<% end %>
				<div class="field col-sm-2 col-md-2 delete-button">
					<%= link_to_remove_association t('recipes.remove_ingredient'), f, class: "form-button btn btn-danger btn-sm" %>

				</div>
			</div>
		</div>
		
		
	</div>
</div>