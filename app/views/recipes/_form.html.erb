<%= simple_form_for @recipe, html: { multipart: true} do |f| %>
	<% if @recipe.errors.any? %>
		<div id="errors">
			<h3>
				<%= @recipe.errors.count %>
				prohibited this recipe from being saved:
			</h3>
			<ul>
				<% @recipe.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	
	<% end %>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-6">
				<div class="field">
					<%= f.input :title, input_html: { class: 'form-control' } %>
				</div>
				<div class="field">
					<%= f.label :image %>
					<%= f.file_field :image %>
				</div>
			</div>
			<div class="col-md-6">
				<div class="field">
					<%= f.input :description, input_html: { class: 'form-control' } %>
				</div>
			</div>
		</div>
		
		

		<div class="row">
			<div class="col-md-6">
				<h3>Ingredients</h3>
				<div id="ingredients">
					<%= f.simple_fields_for :ingredients do |ingredient| %>
						<%= render "ingredient_fields", f: ingredient %>
					<% end %>
					<div class="links">
						<%= link_to_add_association 'Add Ingredient', f, :ingredients, class: "btn btn-light add-button" %>
						
					</div>
					
				</div>
			</div>
			<div class="col-md-6">
				<h3>Directions</h3>
				<div id="directions">
					<div class="direction-form card">
						<%= f.simple_fields_for :directions do |direction| %>
							<%= render "direction_fields", f: direction %>
						<% end %>
						
					</div>
					
					<div class="links">
						<%= link_to_add_association 'Add Step', f, :directions, class: "btn btn-light add-button" %>
						
					</div>
					
				</div>
			</div>
		</div>
	</div>

	<%= f.button :submit, class: "btn btn-primary" %>
	

<% end %>
