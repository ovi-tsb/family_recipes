<!DOCTYPE html>
<html>
  <head>
    <title>FamilyRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <% if user_signed_in?  %>
        <a class="navbar-brand" href="#" title="<%= current_user.email %>">
          <%= current_user.first_name %> <%= current_user.last_name %>
        </a>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in?  %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Page", users_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Setari", edit_user_registration_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Retete", recipes_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Invitations", invitations_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
