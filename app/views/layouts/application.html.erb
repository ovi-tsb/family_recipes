<!DOCTYPE html>
<html>
  <head>
    <title>FamilyRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Page", users_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Groups", groups_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Setari", edit_user_registration_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Retete", recipes_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Invitations", invitations_path(current_user), class: "nav-link" %>
        </li>
      </ul>
    </nav>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
